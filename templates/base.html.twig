<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Cabinet de Psychologie - Maëva DIVAD{% endblock %}</title>
        <meta name="description" content="{% block description %}Cabinet de psychologie clinicienne à Paris. Consultations individuelles et accompagnement thérapeutique personnalisé.{% endblock %}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <!-- Favicon -->
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon.png') }}">
        <link rel="shortcut icon" type="image/png" href="{{ asset('images/favicon.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon.png') }}">
        
        <!-- Web App Manifest -->
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <meta name="theme-color" content="#8B5FBF">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="default">
        <meta name="apple-mobile-web-app-title" content="Psychologie MD">
        
        <!-- Meta tags pour SEO -->
        <meta property="og:title" content="{% block og_title %}Cabinet de Psychologie - Maëva DIVAD{% endblock %}">
        <meta property="og:description" content="{% block og_description %}Cabinet de psychologie clinicienne à Paris. Consultations individuelles et accompagnement thérapeutique personnalisé.{% endblock %}">
        <meta property="og:image" content="{{ asset('images/favicon.png') }}">
        <meta property="og:type" content="website">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
